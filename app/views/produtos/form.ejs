<html>
    <body>
        <div class="erros">
            <% if(errosValidacao){ %>
                <ul>
                    <% for(let i = 0; i < errosValidacao.length; i++) { %>
                        <li>
                            <%= errosValidacao[i].param %> - <%= errosValidacao[i].msg %>
                        </li>
                    <% } %>
                </ul>
            <% } %>
        </div>
        <form action="/produtos" method="POST">
            <div>
                <label for="titulo">Título</label>
                <input id="titulo" type="text" name="titulo" placeholder="titulo do livro" value="<%= produto.titulo %>">
            </div>
            <div>
                <label for="preco">Preço</label>
                <input id="preco" type="text" name="preco" placeholder="150.25" value="<%= produto.preco %>">
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea cols="50" rows="5" id="descricao" name="descricao" placeholder="descricao do livro" >
                    <%=produto.descricao%>
                </textarea>
            </div>
            <input type="submit" value="gravar">
        </form>
    </body>
</html>